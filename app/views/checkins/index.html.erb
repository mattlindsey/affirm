<div class="max-w-5xl mx-auto p-6">
  <header class="text-center mb-8">
    <h1 class="text-4xl font-bold text-gray-800 mb-4">Your check-ins</h1>
    <div class="mb-6 flex flex-wrap justify-center gap-4">
      <%# reserved for action buttons (kept for layout consistency) %>
    </div>
  </header>

  <% if @checkins.present? %>
    <div class="space-y-6">
      <%= render 'chart' %>
      <% @checkins.each do |checkin| %>
        <article id="checkin-<%= checkin.id %>" class="bg-gray-50 border-l-4 border-green-500 p-6 rounded-r-lg shadow-md hover:shadow-lg transition-shadow duration-200">
          <div class="flex items-center justify-between">
            <time class="text-sm text-gray-500" datetime="<%= checkin.created_at.iso8601 %>">
              <%= l(checkin.created_at, format: :short) %>
            </time>

            <div class="text-sm text-gray-700 font-semibold">
              Mood: <span class="ml-1"><%= checkin.mood_level %>/10</span>
            </div>
          </div>

          <p class="text-lg text-gray-800 leading-relaxed mt-3 mb-3">
            <%= checkin.notes.presence || "No comment" %>
          </p>

          <footer class="text-sm text-gray-500">
            <time datetime="<%= checkin.created_at.to_date.iso8601 %>">
              <%= checkin.created_at.strftime("%B %d, %Y") %>
            </time>
          </footer>
        </article>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-gray-500 italic text-lg mt-10">
      You don't have any check-ins yet. Try the quick check-in on the home page!
    </p>
  <% end %>
</div>