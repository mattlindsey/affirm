<div class="max-w-4xl mx-auto p-4 sm:p-6">
  <!-- Header -->
  <div class="text-center mb-6 sm:mb-8">
    <h1 class="text-2xl sm:text-4xl font-bold text-gray-800 mb-3 sm:mb-4">Gratitude</h1>

    <!-- Action Buttons -->
    <div class="mb-4 sm:mb-6 flex flex-wrap justify-center gap-3 sm:gap-4">
      <%= link_to "ğŸŒ… Quick Check-in", welcome_path, 
          class: "bg-orange-600 hover:bg-orange-700 text-white font-semibold py-2 sm:py-3 px-4 sm:px-6 rounded-lg transition-colors duration-200 text-sm sm:text-base" %>
      <%= link_to "ğŸ² Get Random Gratitude", gratitude_random_path, 
          class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 sm:py-3 px-4 sm:px-6 rounded-lg transition-colors duration-200 text-sm sm:text-base" %>
      <%= link_to "ğŸ“ Create todays gratitudes", create_gratitude_path, 
          class: "bg-green-600 hover:bg-green-700 text-white font-semibold py-2 sm:py-3 px-4 sm:px-6 rounded-lg transition-colors duration-200 text-sm sm:text-base" %>
      <%= link_to "ğŸ¯ Random Prompt", gratitude_prompt_path, 
          class: "bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 sm:py-3 px-4 sm:px-6 rounded-lg transition-colors duration-200 text-sm sm:text-base" %>
    </div>
  </div>

  <!-- Gratitudes List -->
  <% if @gratitudes.any? %>
    <div class="space-y-4 sm:space-y-6">
      <% @gratitudes.each do |gratitude| %>
        <div class="bg-gray-50 border-l-4 border-green-500 p-4 sm:p-6 rounded-r-lg shadow-sm sm:shadow-md hover:shadow-lg transition-shadow duration-200">
          <p class="text-base sm:text-lg text-gray-800 leading-relaxed mb-2 sm:mb-3"><%= gratitude.content %></p>
          <small class="text-xs sm:text-sm text-gray-500">Created: <%= gratitude.created_at.strftime("%B %d, %Y") %></small>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-gray-500 italic text-base sm:text-lg mt-6 sm:mt-10">
      No gratitudes yet. Create today's gratitudes to get started!
    </p>
  <% end %>
</div>
